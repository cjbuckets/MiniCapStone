
<h1> Edit Product!</h1>

<%= form_tag "/pills/#{@item.id}", method: :patch do %>

  <div>
  <%= label_tag       :product %>
  <%= text_field_tag  :product %>
  </div>
  
  <div>
  <%= label_tag       :description %>
  <%= text_field_tag  :description %>
  </div>

   <div>
  <%= label_tag       :price %>
  <%= text_field_tag  :price %>
  </div>

   <div>
  <%= submit_tag 'Update' %>
  </div>

  <% end %>